<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:id="@+id/register_main"
    tools:context=".startup.Register">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:gravity="center"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:paddingBottom="15dp"
                android:gravity="center"
                android:textSize="@dimen/heading_font_size"
                android:text="@string/sign_up"
                android:textStyle="normal"
                android:textColor="@color/black_font"
                android:layout_gravity="left"
                android:paddingLeft="5dp"
                android:fontFamily="@font/avenirltstd_medium" />
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/MyCardView"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">
                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="left"
                        android:text="Select Registration type :"

                        android:fontFamily="@font/avenirltstd_book_light"
                        android:textColor="@color/black_font"
                        android:textSize="@dimen/small_txt" />
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/individual_user"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/bottomMarginBelowTitle"
                            android:layout_marginRight="@dimen/bottomMarginBelowTitle"
                            android:background="@drawable/button_only_border_two"
                            android:fontFamily="@font/avenirltstd_book_light"
                            android:gravity="left|center"
                            android:padding="10dp"
                            android:text="User"
                            android:textColor="@color/white_font"
                            android:textSize="@dimen/editfieldTextSize" />

                        <TextView
                            android:id="@+id/A_rotaract_club"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/bottomMarginBelowTitle"
                            android:layout_marginRight="@dimen/bottomMarginBelowTitle"
                            android:layout_toRightOf="@+id/individual_user"
                            android:background="@drawable/button_only_border_one"
                            android:fontFamily="@font/avenirltstd_book_light"
                            android:gravity="left|center"
                            android:padding="10dp"
                            android:text="Rotaract Club's"
                            android:textColor="@color/gradient_light_green1"
                            android:textSize="@dimen/editfieldTextSize" />

                        <TextView
                            android:id="@+id/A_company"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/bottomMarginBelowTitle"
                            android:layout_toRightOf="@+id/A_rotaract_club"
                            android:background="@drawable/button_only_border_one"
                            android:fontFamily="@font/avenirltstd_book_light"
                            android:gravity="left|center"

                            android:padding="10dp"
                            android:text="Company"
                            android:textColor="@color/gradient_light_green1"
                            android:textSize="@dimen/editfieldTextSize" />

                    </RelativeLayout>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="Name of user ?"
                        android:fontFamily="@font/avenirltstd_book_light"
                        android:textColor="@color/black_font"
                        android:textSize="@dimen/small_txt" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/inside_cardView_layout_marginLeft_Right"
                        android:layout_marginRight="@dimen/inside_cardView_layout_marginLeft_Right"
                        android:layout_marginBottom="11dp"
                        android:layout_marginTop="5dp"
                        >

                        <EditText
                            android:id="@+id/name"
                            android:hint="NAME"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/field_button_height"
                            android:gravity="center|left"
                            android:inputType="text"
                            android:background="@color/transparent"
                            android:paddingLeft="@dimen/regi_editTextLeftPadding"
                            android:paddingRight="@dimen/EditView_paddingLeft_Right"
                            android:textColorHint="@color/gradient_light_green1"
                            android:textSize="@dimen/button_editText_font_size_new_Small"
                            android:textColor="@color/black_font"
                            android:fontFamily="@font/avenirltstd_book_light" />



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0.2dp"
                            android:layout_below="@+id/name"
                            android:background="@color/gradient_light_green1"/>

                    </RelativeLayout>

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="Contact number ?"
                        android:fontFamily="@font/avenirltstd_book_light"
                        android:textColor="@color/black_font"
                        android:textSize="@dimen/small_txt" />

                    <RelativeLayout
                        android:id="@+id/frame2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/inside_cardView_layout_marginLeft_Right"
                        android:layout_marginRight="@dimen/inside_cardView_layout_marginLeft_Right"
                        android:layout_marginTop="10dp"
                        >

                        <EditText
                            android:id="@+id/contact_number"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/field_button_height"
                            android:gravity="center|left"
                            android:inputType="text"
                            android:background="@color/transparent"
                            android:paddingLeft="@dimen/regi_editTextLeftPadding"
                            android:paddingRight="@dimen/EditView_paddingLeft_Right"
                            android:textColorHint="@color/gradient_light_green1"
                            android:textSize="@dimen/button_editText_font_size_new_Small"
                            android:hint="NUMBER"
                            android:textColor="@color/black_font"
                            android:fontFamily="@font/avenirltstd_book_light" />



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0.2dp"
                            android:layout_below="@+id/contact_number"
                            android:background="@color/Input_and_normalText"/>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">





                        <RelativeLayout
                            android:id="@+id/frame3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/inside_cardView_layout_marginLeft_Right"
                            android:layout_marginRight="@dimen/inside_cardView_layout_marginLeft_Right"
                            android:layout_marginBottom="11dp"
                            android:background="@color/transparent">

                            <!--<EditText-->
                            <!--android:id="@+id/user_designation"-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="match_parent"-->
                            <!--android:gravity="center"-->
                            <!--android:inputType="text"-->
                            <!--android:background="@drawable/txtview_shapes"-->
                            <!--android:paddingLeft="@dimen/EditView_paddingLeft_Right"-->
                            <!--android:paddingRight="@dimen/EditView_paddingLeft_Right"-->
                            <!--android:textColorHint="@color/display_txt_colour"-->
                            <!--android:textSize="@dimen/button_editText_font_size"-->
                            <!--android:hint="@string/designation"-->
                            <!--android:textColor="@color/display_txt_colour"-->
                            <!--android:fontFamily="@font/lato_light"-->

                            <!--/>-->
                            <ImageView
                                android:layout_width="@dimen/img_icon_LengthAndWidth"
                                android:layout_height="@dimen/img_icon_LengthAndWidth"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:padding="@dimen/img_icon_paddin"
                                android:layout_marginLeft="@dimen/img_icon_layout_marginLeft"
                                android:src="@drawable/designation" />

                            <Spinner
                                android:id="@+id/user_designation_spinner"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/field_button_height"
                                android:paddingLeft="45dp"
                                android:backgroundTint="@color/transparent"
                                android:textColorHint="@color/Input_and_normalText"
                                android:textSize="@dimen/button_editText_font_size_new_Small"
                                android:textColor="@color/Input_and_normalText"
                                android:fontFamily="@font/avenirltstd_book_light"
                                android:autofillHints="@string/country"
                                android:textAlignment="center"
                                android:dropDownSelector="@null"
                                android:background="@color/transparent" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0.2dp"
                                android:layout_below="@+id/user_designation_spinner"
                                android:background="@color/Input_and_normalText"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/frame4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/inside_cardView_layout_marginLeft_Right"
                            android:layout_marginRight="@dimen/inside_cardView_layout_marginLeft_Right"
                            android:layout_marginBottom="11dp"
                            android:layout_below="@id/frame3"
                            android:background="@color/transparent">

                            <!--<EditText-->
                            <!--android:id="@+id/user_country"-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="match_parent"-->
                            <!--android:gravity="center"-->
                            <!--android:inputType="text"-->
                            <!--android:background="@drawable/txtview_shapes"-->
                            <!--android:paddingLeft="@dimen/EditView_paddingLeft_Right"-->
                            <!--android:paddingRight="@dimen/EditView_paddingLeft_Right"-->
                            <!--android:textColorHint="@color/display_txt_colour"-->
                            <!--android:textSize="@dimen/button_editText_font_size"-->
                            <!--android:hint="@string/country"-->
                            <!--android:textColor="@color/display_txt_colour"-->
                            <!--android:fontFamily="@font/lato_light"-->

                            <!--/>-->
                            <ImageView
                                android:layout_width="@dimen/img_icon_LengthAndWidth"
                                android:layout_height="@dimen/img_icon_LengthAndWidth"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:padding="@dimen/img_icon_paddin"
                                android:layout_marginLeft="@dimen/img_icon_layout_marginLeft"
                                android:src="@drawable/country" />

                            <Spinner
                                android:visibility="gone"
                                android:id="@+id/user_country_spinner"
                                android:gravity="center|left"
                                android:paddingLeft="45dp"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/field_button_height"
                                android:background="@android:color/transparent"
                                android:textColorHint="@color/Input_and_normalText"
                                android:textSize="@dimen/button_editText_font_size_new_Small"
                                android:textColor="@color/Input_and_normalText"
                                android:fontFamily="@font/avenirltstd_book_light"
                                android:autofillHints="@string/country"
                                android:textAlignment="center" />
                            <com.rilixtech.CountryCodePicker
                                android:id="@+id/ccp"
                                android:paddingTop="7dp"
                                android:layout_marginLeft="56dp"
                                android:layout_height="@dimen/field_button_height"
                                android:layout_width="wrap_content"
                                />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0.2dp"
                                android:layout_below="@+id/ccp"
                                android:background="@color/Input_and_normalText"/>

                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/frame5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/inside_cardView_layout_marginLeft_Right"
                            android:layout_marginRight="@dimen/inside_cardView_layout_marginLeft_Right"
                            android:layout_marginBottom="11dp"
                            android:layout_below="@id/frame4">

                            <EditText
                                android:id="@+id/user_phone_no"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/field_button_height"
                                android:gravity="center|left"
                                android:paddingLeft="55dp"
                                android:inputType="number"
                                android:background="@color/transparent"
                                android:paddingRight="@dimen/EditView_paddingLeft_Right"
                                android:textColorHint="@color/Input_and_normalText"
                                android:textSize="@dimen/button_editText_font_size_new_Small"
                                android:hint="@string/phone_no"
                                android:textColor="@color/Input_and_normalText"
                                android:fontFamily="@font/avenirltstd_book_light" />

                            <ImageView
                                android:layout_width="@dimen/img_icon_LengthAndWidth"
                                android:layout_height="@dimen/img_icon_LengthAndWidth"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:padding="@dimen/img_icon_paddin"
                                android:layout_marginLeft="@dimen/img_icon_layout_marginLeft"
                                android:src="@drawable/phone" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0.2dp"
                                android:layout_below="@+id/user_phone_no"
                                android:background="@color/Input_and_normalText"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/frame6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/inside_cardView_layout_marginLeft_Right"
                            android:layout_marginRight="@dimen/inside_cardView_layout_marginLeft_Right"
                            android:layout_marginBottom="11dp"
                            android:layout_below="@id/frame5">

                            <EditText
                                android:id="@+id/user_website"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/field_button_height"
                                android:gravity="center|left"
                                android:inputType="text"
                                android:background="@color/transparent"
                                android:paddingLeft="55dp"
                                android:paddingRight="@dimen/EditView_paddingLeft_Right"
                                android:textColorHint="@color/Input_and_normalText"
                                android:textSize="@dimen/button_editText_font_size_new_Small"
                                android:hint="@string/hotel_website"
                                android:textColor="@color/Input_and_normalText"
                                android:fontFamily="@font/avenirltstd_book_light" />

                            <ImageView
                                android:layout_width="@dimen/img_icon_LengthAndWidth"
                                android:layout_height="@dimen/img_icon_LengthAndWidth"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:padding="@dimen/img_icon_paddin"
                                android:layout_marginLeft="@dimen/img_icon_layout_marginLeft"
                                android:src="@drawable/hwebsite" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0.2dp"
                                android:layout_below="@+id/user_website"
                                android:background="@color/Input_and_normalText"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/frame7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/inside_cardView_layout_marginLeft_Right"
                            android:layout_marginRight="@dimen/inside_cardView_layout_marginLeft_Right"
                            android:layout_below="@id/frame6">

                            <EditText
                                android:id="@+id/user_email"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/field_button_height"
                                android:gravity="center|left"
                                android:inputType="textEmailAddress"
                                android:background="@color/transparent"
                                android:paddingLeft="55dp"
                                android:paddingRight="@dimen/EditView_paddingLeft_Right"
                                android:textColorHint="@color/Input_and_normalText"
                                android:textSize="@dimen/button_editText_font_size_new_Small"
                                android:hint="@string/email_address"
                                android:textColor="@color/Input_and_normalText"
                                android:fontFamily="@font/avenirltstd_book_light" />

                            <ImageView
                                android:layout_width="@dimen/img_icon_LengthAndWidth"
                                android:layout_height="@dimen/img_icon_LengthAndWidth"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:padding="@dimen/img_icon_paddin"
                                android:layout_marginLeft="@dimen/img_icon_layout_marginLeft"
                                android:src="@drawable/email" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0.2dp"
                                android:layout_below="@+id/user_email"
                                android:background="@color/Input_and_normalText"/>

                        </RelativeLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/frame8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/inside_cardView_layout_marginLeft_Right"
                            android:layout_marginRight="@dimen/inside_cardView_layout_marginLeft_Right"
                            android:layout_below="@id/frame7"
                            app:passwordToggleEnabled="true"

                            app:passwordToggleTint="@color/Input_and_normalText">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/user_password"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/field_button_height"
                                android:gravity="center|left"
                                android:inputType="textPassword"
                                android:background="@color/transparent"
                                android:paddingLeft="55dp"
                                android:paddingRight="7dp"
                                android:textColorHint="@color/Input_and_normalText"
                                android:textSize="@dimen/button_editText_font_size_new_Small"
                                android:textColor="@color/Input_and_normalText"
                                android:fontFamily="@font/avenirltstd_book_light" />

                        </android.support.design.widget.TextInputLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginLeft="@dimen/inside_cardView_layout_marginLeft_Right"
                            android:layout_marginRight="@dimen/inside_cardView_layout_marginLeft_Right"
                            android:layout_height="0.2dp"
                            android:layout_marginBottom="20dp"
                            android:layout_below="@+id/frame8"
                            android:background="@color/Input_and_normalText"/>

                    </RelativeLayout>
                </LinearLayout>


            </android.support.v7.widget.CardView>


            <Button
                android:id="@+id/btn_register"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/field_button_height"
                android:layout_marginBottom="@dimen/Button_layout_marginTop_Bottom"
                android:layout_marginTop="@dimen/Button_layout_marginTop_Bottom"
                android:layout_marginLeft="@dimen/inside_cardView_layout_marginLeft_Right"
                android:layout_marginRight="@dimen/inside_cardView_layout_marginLeft_Right"
                android:textSize="@dimen/ButtonSize"
                android:text="@string/sign_up"
                android:textStyle="normal"
                android:textColor="@color/Heading_and_title"
                android:background="@drawable/txtview_shapes_one"
                android:fontFamily="@font/avenirltstd_medium" />

            <TextView
                android:id="@+id/backToSignInRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:layout_gravity="center"
                android:fontFamily="@font/avenirltstd_book_light"
                android:textSize="@dimen/small_txt" />

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="#B0000000"
        android:clickable="true"
        android:id="@+id/signup_relativeProgress"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/signup_progressBar"
            android:visibility="gone"
            android:indeterminateTint="@color/white_color" />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>